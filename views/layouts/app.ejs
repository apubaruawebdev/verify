<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Student Crud</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- body %>
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
        <script>

            $('.student-Data-Table').dataTable();

            const student_photo = document.querySelector('#student_photo');
            const preloadImage = document.querySelector('.preloadImage');

            if (student_photo) {
                student_photo.onchange = (e) => {
                    const imageLink = URL.createObjectURL(e.target.files[0]);
                    preloadImage.setAttribute('src', imageLink);
                }
            }

            const delete_btn = document.querySelectorAll('.delete_btn');
            if (delete_btn) {
                delete_btn.forEach(item => {
                    item.onclick = (e) => {
                        const conf = confirm("Are You Sure??");
                        if (conf) {
                            return true;
                        } else {
                            return false;
                        }
                    }
                })
            }
        </script>
</body>

</html>