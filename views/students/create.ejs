<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <a href="/student" class="btn btn-primary mb-3">Back</a>
            <div class="card shadow">
                <div class="card-header">
                    <h2>Create Student Information</h2>
                </div>
                <div class="card-body">
                    <form action="/student/create" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Phone</label>
                            <input type="text" name="cell" class="form-control">
                        </div>
                        <div class="my-3">
                            <label for="">Location</label>
                            <select class="form-control" name="location" id="">
                                <option value="">--Select--</option>
                                <option value="Mohakhali">Mohakhali</option>
                                <option value="Mirpur">Mirpur</option>
                                <option value="Badda">Badda</option>
                            </select>
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <img class="preloadImage" src="" alt="">
                            <br>
                            <label for="student_photo">
                                <img class="imageIcon"
                                    src="https://cdn3.vectorstock.com/i/1000x1000/96/72/gallery-icon-vector-21679672.jpg"
                                    alt="">
                            </label>
                            <input type="file" name="studentPhoto" id="student_photo">
                        </div>
                        <div class="my-3">
                            <input type="submit" class="btn btn-primary w-100" value="Create">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>